set -e

while read lref new rref old
do
    case $rref in
        refs/tags/*)
            if echo "$rref" | \
                grep -qsE '(^refs/tags/v[0-9]+.[0-9]+.[0-9]+(-rc.[0-9]+)?$)'
            then
                ginkgo run -tags=version -p ./...
            else
                echo "'$rref' does not match '^refs/tags/v[0-9]+.[0-9]+.[0-9]+(-rc\.[0-9]+)?$'"
                exit 1
            fi;;
        *)
            ;;
    esac
done